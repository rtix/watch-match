<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>ed8d2c86-b89f-4f70-ac55-fac82d328020</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.0" />
    <PackageReference Include="TMDbLib" Version="2.3.0" />
    <PackageReference Include="TypeGen" Version="7.0.0" />
  </ItemGroup>

	<Target Name="TypeGen" AfterTargets="Build">
		<Exec Command="dotnet tool run dotnet-typegen generate" WorkingDirectory="$(ProjectDir)" />
	</Target>

</Project>
